<!--Save-->
<script>
    $(Document).ready(function () {
        $("emplist").click(function () {
            $("#tbleshow").hide();



            $.ajax({
                type: "POST",
                url: "/CURDAJAX/Create/",
                data: {},
                success: function (result) {
                    alert('ok');
                },
                error: function (result) {
                    alert('error');
                }
            });

        });
    });
</script>
















