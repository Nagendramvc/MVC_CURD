
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<h2>AJAX</h2>



<button id="emplist">Employee Lists</button>

<div>
    <div class="container" id="tbleshow">
        <table class="table table-striped">
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Name
                </th>
            </tr>
            <tr>
                <td id="ide"></td>
                <td id="nm"></td>
